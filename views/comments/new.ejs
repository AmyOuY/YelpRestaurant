<%- include("../partials/header") %>

<div class="row">
	<h1 class="h1-head">
		Add New Comment to <%= restaurant.name %>
	</h1>
	<div class="form-head">
		<form action="/restaurants/<%= restaurant._id %>/comments" method="POST">
			<div class="form-group">
				<input class="form-control" type="text" name="comment[text]" placeholder="text">
			</div>
			<div class="form-group">
				<button class="btn btn-primary btn-lg btn-block">
					Submit
				</button>
			</div>
		</form>
		<a href="/restaurants">Go Back</a>
	</div>
</div>

<%- include("../partials/footer") %>