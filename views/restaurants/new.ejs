<%- include("../partials/header") %>

<div class="row">
	<h1 class="h1-head">
		Create New Restaurant
	</h1>
	<div class="form-head">
		<form action="/restaurants" method="POST">
			<div class="form-group">
				<input class="form-control" type="text" name="restaurant[name]" placeholder="name">
			</div>
			<div class="form-group">
				<input class="form-control" type="text" name="restaurant[image]" placeholder="image url">
			</div>
			<div class="form-group">
				<input class="form-control" type="text" name="restaurant[flavor]" placeholder="flavor">
			</div>
			<div class="form-group">
				<input class="form-control" type="text" name="restaurant[address]" placeholder="address">
			</div>
			<div class="form-group">
				<input class="form-control" type="text" name="restaurant[description]" placeholder="description">
			</div>
			<div class="form-group">
				<button class="btn btn-lg btn-primary btn-block">
					Submit
				</button>
			</div>
		</form>
		<a href="/restaurants">Go Back</a>
	</div>
</div>

<%- include("../partials/footer") %>